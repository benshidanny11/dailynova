<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayLyricsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                app:srcCompat="@drawable/ic_image_black_24dp"
                android:id="@+id/img_artist_image_in_display_lyrics"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/txt_artist_name_in_display_lyrics"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Artist name"
                    android:textColor="@color/txtColor"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_lyrics_name_in_display_lyrics"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Song name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_download_lyrics_in_display_lyrics"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_arrow_downward_black_24dp" />

                <ImageView
                    android:id="@+id/img_share_lyrics_in_display_lyrics"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_share_black_24dp" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lyrics body"
                android:gravity="center"
                android:id="@+id/txt_lyrics_body_in_display_lyrics"
                android:textSize="@dimen/_13sdp"
                />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>