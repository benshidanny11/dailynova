<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/_100sdp"
     android:orientation="horizontal"
     android:layout_marginBottom="@dimen/_10sdp">
     <RelativeLayout
         android:layout_width="@dimen/_200sdp"
         android:layout_height="match_parent"
         android:paddingTop="@dimen/_3sdp"
         android:paddingLeft="@dimen/_5sdp"
         android:paddingRight="@dimen/_3sdp"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/txt_lifestyle_title"
             android:text="@string/lifestyle_title"
             android:textStyle="bold"
             android:textSize="@dimen/_12sdp"
             android:maxLines="1"
             android:ellipsize="end"
             />
         <TextView
             android:layout_marginTop="@dimen/_3sdp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/txt_lifestyle_content"
             android:text="@string/lifestyle_title"
             android:textSize="@dimen/_11sdp"
             android:maxLines="3"
             android:ellipsize="end"
             android:layout_below="@id/txt_lifestyle_title"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/txt_lifestyle_source"
             android:text="@string/lifestyle_source"
             android:textSize="@dimen/_11sdp"
             android:maxLines="1"
             android:layout_alignParentBottom="true"
             android:autoLink="web"
             android:textColorLink="@color/link_color"
             android:linksClickable="true"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/txt_lifestyle_upload_date"
             android:text="@string/upload_date"
             android:textSize="@dimen/_11sdp"
             android:maxLines="1"
             android:layout_alignParentBottom="true"
             android:layout_alignParentEnd="true"

             />

     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:id="@+id/img_lifestyle_image"
            app:srcCompat="@drawable/ic_image_black_24dp"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            />
     </RelativeLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#949494"></LinearLayout>
</LinearLayout>