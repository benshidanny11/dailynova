<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayNewsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                app:srcCompat="@drawable/ic_image_black_24dp"
                android:id="@+id/img_news_image_in_display_news"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/txt_news_owner_in_display_news"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="News website"
                    android:textColor="@color/txtColor"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_news_title_in_display_news"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="News title" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Uploaded on"
                    android:id="@+id/txt_upload_date_in_display_news"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News body"
                android:gravity="center"
                android:id="@+id/txt_news_body_in_display_news"
                android:textSize="@dimen/_13sdp"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>