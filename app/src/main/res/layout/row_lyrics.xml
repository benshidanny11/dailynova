<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:paddingTop="@dimen/_2sdp">
          <TextView
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_width="@dimen/_250sdp"
              android:layout_height="wrap_content"
              android:text="Lyrics name"
              android:textSize="@dimen/_13sdp"
              android:textColor="@color/txtColor"
              android:textStyle="bold"
              android:maxLines="1"
              android:ellipsize="end"
              android:id="@+id/txt_lyrics_name_in_lyrics_row"
              />
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_more_horiz_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_2sdp"
                android:id="@+id/img_more_in_row_lyrics"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#C4C3C3">

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            app:srcCompat="@drawable/ic_image_default"
            android:id="@+id/img_artist_image_in_row_lyrics"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#C4C3C3">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_2sdp"
                android:paddingLeft="@dimen/_3sdp">
                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:text="Artist name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/txtColor"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:id="@+id/txt_artist_name_in_row_lyrics"
                    />
                <TextView
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:text="Posted om"
                    android:layout_alignParentBottom="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:id="@+id/txt_posted_on_in_row_lyrics"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:srcCompat="@drawable/ic_arrow_downward_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/img_download_lyrics_audio_in_row_lyrics"/>
                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:srcCompat="@drawable/ic_share_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_share_lyrics_audio_in_row_lyrics"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#C4C3C3">

    </LinearLayout>
</LinearLayout>