<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayBusinesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                app:srcCompat="@drawable/ic_image_black_24dp"
                android:id="@+id/img_business_image_in_display_business"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/txt_business_title_in_display_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Business title"
                    android:textColor="@color/txtColor"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_business_source_in_display_business"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Business source" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business category"
                    android:id="@+id/txt_business_category_in_display_business"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_2sdp"/>

            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business content"
                android:gravity="center"
                android:id="@+id/txt_business_content_in_display_business"
                android:textSize="@dimen/_13sdp"
                />
            <TextView
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business ref"
                android:gravity="center"
                android:id="@+id/txt_business_reference_in_display_business"
                android:textSize="@dimen/_13sdp"
                android:layout_below="@+id/txt_business_content_in_display_business"
                android:autoLink="web"
                android:textColorLink="#0099FF"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>