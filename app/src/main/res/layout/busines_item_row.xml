<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardElevation="@dimen/_2sdp"
    card_view:cardCornerRadius="@dimen/_3sdp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_3sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingBottom="@dimen/_2sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_business_title"
                android:text="Business title"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_business_content"
                android:text="Business content"
                android:textSize="@dimen/_11sdp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_below="@id/txt_business_title"
                />
            <TextView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/txt_business_source"
                android:text="Business source"
                android:textSize="@dimen/_11sdp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:autoLink="web"
                android:textColorLink="@color/link_color"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginEnd="@dimen/_2sdp"
                android:id="@+id/img_business_image"
                card_view:srcCompat="@drawable/ic_image_black_24dp"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_business_upload_date"
                android:text="@string/upload_date"
                android:textSize="@dimen/_11sdp"
                android:maxLines="1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_27sdp"
                />
            <ImageView
                android:id="@+id/img_business_more"
                card_view:srcCompat="@drawable/ic_more_horiz_black_24dp"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>