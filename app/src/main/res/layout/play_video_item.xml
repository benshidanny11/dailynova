<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_6sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp">
    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_video_thumb_in_play_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_video_duration_in_play"
            android:text="@string/video_duration"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="#636262"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">
        <TextView
            android:id="@+id/txt_video_name_in_video_play"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="@string/video_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Video source"
            android:layout_below="@+id/txt_video_name_in_video_play"
            android:id="@+id/txt_video_source_in_play"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video source"
            android:layout_alignParentBottom="true"
            android:id="@+id/txt_video_upload_date_in_play"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/img_more_in_play"
            app:srcCompat="@drawable/ic_more_horiz_black_24dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>

</LinearLayout>