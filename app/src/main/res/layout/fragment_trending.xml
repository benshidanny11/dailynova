<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/lyt_apps_row"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/_105sdp"
            android:layout_height="match_parent">
           <ImageView
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"
               android:layout_centerInParent="true"
               android:src="@drawable/ic_whatsapp"
               android:id="@+id/img_open_whatapp_statuses_in_fragment_trending"
               android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/_105sdp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_facebook"
                android:id="@+id/img_open_facebook_in_fragment_trending"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/_105sdp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_instagram"
                android:id="@+id/img_open_instagram_in_fragment_trending"
                android:scaleType="fitXY"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:layout_below="@+id/lyt_apps_row"
        android:id="@+id/lyt_separator"
        android:orientation="vertical"
        android:background="#F5F4F4">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyt_separator">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_trending_list"
            >

        </androidx.recyclerview.widget.RecyclerView>
        <ProgressBar
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/progress_in_fragment_trending"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/progressbar"/>
    </RelativeLayout>
</RelativeLayout>